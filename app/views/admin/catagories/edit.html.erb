<!-- Main content -->
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Category Edit</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><%= @category.title %></h3>
            </div>
            <div class="card-body">
              <% if flash[:errors] %>
                <% flash[:errors].each do |error| %>
                  <p style="color: red"><%= error %></p>
                <%end%>
              <%end%>
              <%= form_for @category, url: { action: "update" } do %>
                <div class="form-group">
                  <label>Title</label>
                  <%= text_field 'category' ,'title', :class => 'form-control',:value =>@category.title %>
                </div>
                <div class="form-group">
                  <label>Slug</label>
                  <%= text_field 'category','slug', :class => 'form-control', :value =>@category.slug %>
                </div>
                <div class="form-group">
                  <label>Content</label>
                  <%= text_area 'category','content',class:'summernote', 'data-provider': :summernote, :value =>@category.content %>
                </div>
              <%= submit_tag "Update", class: 'btn btn-block btn-secondary' %>
              <% end -%>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

