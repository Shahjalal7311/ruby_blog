<!-- Main content -->
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>MANAGE USERS</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Users</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"></h3>
              <div style="float: right;"><a href="/admin/users/new">Add New</a></div>
            </div>
            <div class="card-body">
            <%# <%= debug(@users) if Rails.env.development? %>
              <table id="article_data" class="table table-bordered table-hover data_table">
                <thead>
                  <tr>
                    <th>#ID</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Create Date</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |data| %>
                    <tr>
                      <td><%= data.id %></td>
                      <td><%= data.user_name %></td>
                      <td><%= data.email %></td>
                      <td><%= data.created_at %></td>
                      <td width="15%">
                        <%= action(data.id).html_safe %>
                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>  
            </div>
          </div>
        </div>
      </div>
    </div>  
  </section>
</div>        