<i class="fas fa-edit"></i> <%= link_to 'Edit', {:action => 'edit', :id => action_data.id} %>
<i class="fas fa-trash-alt"></i> <%= link_to 'Delete',url_for(action: :destroy,id: action_data.id),method: :delete, data: {confirm: "Are you sure you want to delete this item?"} %>
<% if(action_data.status === 0)%>
  <a style="cursor:pointer;" onclick="onPublish(<%= action_data.id %>, '<%= controller.controller_name %>')"><i class="fa fa-bullhorn"></i> active</a>
<%end%>

<% if(action_data.status === 1)%>
  <a style="cursor:pointer;" onclick="onUnpublish(<%= action_data.id%>, '<%= controller.controller_name %>')"><i class="fa fa-undo"></i> inactive</a>
<%end%>